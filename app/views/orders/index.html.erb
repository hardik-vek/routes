<h1 class="center">Orders Listing</h1>

<center>
<table> 
  <th>Title</th>
  <th colspan=3>Actions</th>
  <th>Back</th>
  <% @orders.each do |order| %>
  <tr>  
    <td><%= order.product.title %></td>
    <td><%= button_to "Show",product_order_path(@product,order),method: :get %></td>
    <td><%= button_to "Edit",edit_product_order_path(@product,order),method: :get %></td>
    <td><%= button_to "Delete",product_order_path(@product,order),method: :delete %></td>
    <td><%= button_to "Back",products_path(@product),method: :get %></td>
  </tr>
  <% end %>
</table>
</center>

<center>
<div>
  <%= link_to "Add a Order",new_product_order_path(@product) %>
</div>
</center>
