<h1 class="center">Products Listing</h1>

<center>
<table> 
  <th>Title</th>
  <th colspan=3>Actions</th>
  <th>Orders</th>
  <% @products.each do |product| %>
  <tr>  
    <td><%= product.title %></td>
    <td><%= button_to "Show",product_path(product),method: :get %></td>
    <td><%= button_to "Edit",edit_product_path(product),method: :get %></td>
    <td><%= button_to "Delete",product_path(product),method: :delete %></td>
    <td><%= button_to "Orders",product_orders_path(product),method: :get %></td>
  </tr>
  <% end %>
</table>
</center>

<center>
<div>
  <%= link_to "Add a product",new_product_path %>
</div>
</center>
