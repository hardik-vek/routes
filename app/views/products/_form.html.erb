<h2>Create a product</h2>

<%= form_with model: @product do |form| %>

<div>
  <%= form.label :Title %><br>
  <%= form.text_field :title ,placeholder: "Enter a title"%>
  <% @product.errors.full_messages_for(:title).each do |message| %>
    <%= message %>
  <% end %> 
</div>

<div>
  <%= form.label :Description %><br>
  <%= form.text_area :description ,placeholder: "Enter a product description"%>
  <% @product.errors.full_messages_for(:description).each do |message| %>
    <%= message %>
  <% end %> 
</div>

<div>
  <%= form.label :Price %><br>
  <%= form.number_field :price %>
  <% @product.errors.full_messages_for(:price).each do |message| %>
    <%= message %>
  <% end %> 
</div>

<div>
  <%= form.submit  %>
</div>

<% end %>
